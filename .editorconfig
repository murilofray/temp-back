# Editor configuration, see https://editorconfig.org
# Configurações padrão para todos os arquivos
root = true

# Configuração para arquivos de texto
[*]
charset = utf-8
end_of_line = crlf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Configurações específicas para linguagens ou diretórios
[*.ts]
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false
